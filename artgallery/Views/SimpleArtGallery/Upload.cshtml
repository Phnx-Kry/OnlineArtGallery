@model artgallery.Models.ArtGallery

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload</h2>

<h3 class="text-success"> @ViewBag.msg</h3>
<h3 class="text-danger"> @ViewBag.error</h3>

@using (Html.BeginForm("Upload", "SimpleArtGallery", FormMethod.Post, new { enctype = "multipart/formdata" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ArtGallery</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
