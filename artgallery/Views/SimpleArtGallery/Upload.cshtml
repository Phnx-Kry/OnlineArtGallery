            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.ArtCategory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("categorylist", "Select country")*@
